apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: openldap-pvc-data
spec:
  accessModes:
    - ReadWriteOnce
  storageClassName: rook-ceph-block
  resources:
    requests:
      storage: 1Gi
---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: openldap-pvc-etc
spec:
  accessModes:
    - ReadWriteOnce
  storageClassName: rook-ceph-block
  resources:
    requests:
      storage: 1Gi
---
apiVersion: v1
kind: ConfigMap
metadata:
  name: openldap
data:
  LDAP_ORGANISATION: {{ ldap_org | default(ldap_org) }}
  LDAP_DOMAIN: {{ ldap_domain | default(ldap_domain) }}
---
apiVersion: v1
kind: Secret
metadata:
  name: openldap
type: Opaque
data:
  LDAP_ADMIN_PASSWORD: {{ ldap_admin_pass | default(ldap_admin_pass) }}
---
apiVersion: apps/v1
kind: Deployment
metadata:
  creationTimestamp: null
  labels:
    app: openldap
  name: openldap
  namespace: openldap
spec:
  replicas: 1
  selector:
    matchLabels:
      app: openldap
  strategy: {}
  template:
    metadata:
      creationTimestamp: null
      labels:
        app: openldap
    spec:
      containers:
      - image: osixia/openldap:1.4.0-amd64
        name: openldap
        envFrom:
        - configMapRef:
            name: openldap
        - secretRef:
            name: openldap
        ports:
        - name: "port-389"
          containerPort: 389
        - name: "port-689"
          containerPort: 689
        volumeMounts:
        - name: openldap-pvc-data
          mountPath: "/var/lib/ldap"
        - name: openldap-pvc-etc
          mountPath: "/etc/ldap/slapd.d"
        resources: {}
      - image: osixia/phpldapadmin:0.9.0-amd64
        name: phpldapadmin
        env:
        - name: PHPLDAPADMIN_LDAP_HOSTS
          value: openldap
        - name: PHPLDAPADMIN_HTTPS
          value: "false"
        ports:
        - name: "port-80"
          containerPort: 80
      volumes:
      - name: openldap-pvc-data
        persistentVolumeClaim:
          claimName: openldap-pvc-data
      - name: openldap-pvc-etc
        persistentVolumeClaim:
          claimName: openldap-pvc-etc
status: {}
---
apiVersion: v1
kind: Service
metadata:
  creationTimestamp: null
  labels:
    app: openldap
  name: openldap
spec:
  type: "NodePort"
  ports:
  - name: "port-80"
    port: 80
    protocol: TCP
    targetPort: 80
    nodePort: 31080
  - name: "port-689"
    port: 689
    protocol: TCP
    targetPort: 689
    nodePort: 31689
  - name: "port-389"
    port: 389
    protocol: TCP
    targetPort: 389
    nodePort: 31389
  selector:
    app: openldap
status:
  loadBalancer: {}
